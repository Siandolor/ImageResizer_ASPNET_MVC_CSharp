<!DOCTYPE html>
<html lang="en">
<head>
    <!-- ==========================================================
         METADATA
         Defines document encoding, viewport scaling, and dynamic title.
         ========================================================== -->
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ImageResizer</title>

    <!-- ==========================================================
         STYLESHEETS
         Includes Bootstrap, site-wide CSS, and app-specific styles.
         ========================================================== -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/ImageResizer.styles.css" asp-append-version="true"/>
</head>

<body>
<!-- ==========================================================
     NAVIGATION BAR
     Provides the main app navigation (brand + links).
     ========================================================== -->
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ImageResizer</a>

            <!-- Mobile nav toggle -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navigation links -->
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Image" asp-action="Index">Home</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<!-- ==========================================================
     MAIN CONTENT
     Placeholder for dynamic Razor view rendering.
     ========================================================== -->
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<!-- ==========================================================
     FOOTER
     Displays application name and copyright.
     ========================================================== -->
<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - ImageResizer
    </div>
</footer>

<!-- ==========================================================
     SCRIPTS
     Includes jQuery, Bootstrap JS, and site-level scripts.
     ========================================================== -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
